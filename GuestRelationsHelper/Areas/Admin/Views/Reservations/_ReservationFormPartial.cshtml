@model ReservationFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h1 class="heading-margin text-center">@ViewBag.Title</h1>

        <form method="post">
            <div class="form-group">
                <label asp-for="CheckIn">Check-In</label>
                <input asp-for="CheckIn" class="form-control" placeholder="@DateTime.UtcNow.Date">
                <span asp-validation-for="CheckIn" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut">Check-Out</label>
                <input asp-for="CheckOut" class="form-control" placeholder="@DateTime.UtcNow.AddDays(1).Date">
                <span asp-validation-for="CheckOut" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestsCount">Number of guests</label>
                <input asp-for="GuestsCount" class="form-control" placeholder="1">
                <span asp-validation-for="GuestsCount" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VillaId">Villa</label>
                <select asp-for="VillaId" class="form-control">
                    @foreach (var villa in Model.Villas)
                    {
                        <option value="@villa.Id">@villa.VillaNumber</option>
                    }
                </select>
                <span asp-validation-for="VillaId" class="small text-danger"></span>
            </div>
        </form>
    </div>
</div>
