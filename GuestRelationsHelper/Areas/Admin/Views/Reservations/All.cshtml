
@model IEnumerable<ReservationSeviceModel>

@{
    ViewBag.Title = "Reservations Administration";
}

<nav>
    
            <h1 class="d-lg-inline-flex">All Reservations</h1>
        
            <a href="/Admin/Reservations/Add" class="btn btn-info d-lg-inline-flex float-right"> Create New</a>

</nav>
<br />

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Villa</th>
            <th scope="col">Check-In</th>
            <th scope="col">Check-Out</th>
            <th scope="col">Guests</th>
            <th scope="col">Requests</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
        <tr>
            <td scope="col">@reservation.Villa</td>
            <td scope="col">@reservation.CheckIn.ToString("dd/MM/yyyy")</td>
            <td scope="col">@reservation.CheckOut.ToString("dd/MM/yyyy")</td>
            <td scope="col">@reservation.GuestsCount</td>
            <td scope="col">
                <a asp-area="Admin" asp-controller="Requests" asp-action="AllByReservation" asp-route-id="@reservation.Id" class="btn btn-info">@reservation.RequestsCount</a></td>
            <td scope="col">
                <a asp-area="Admin" asp-controller="Reservations" asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-info float-right ml-3">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>