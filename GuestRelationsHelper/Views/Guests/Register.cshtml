@model RegisterGuestViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h1 class="heading-margin text-center">Enter Your Details</h1>

        <form method="post">
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Smith">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PnoneNumber">Phone Number</label>
                <input asp-for="PnoneNumber" class="form-control" placeholder="0888888888">
                <span asp-validation-for="PnoneNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Your Reservation Password</label>
                <input asp-for="Password" class="form-control" placeholder="*******">
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Register" />
        </form>
    </div>
</div>
